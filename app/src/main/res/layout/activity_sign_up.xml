<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jung_jaejin.myproject.SignUpActivity">

    <!-- 여기서 가입버튼을 누르면 해당 학생의 번호와 관리자의 번호로 로그인
    아이디가 문자로 전송된다. -->

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="1000"
        app:scale_base_height="1600"
        >
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_top="600"
        app:scale_left="200"
        app:scale_width="300"
        app:scale_height="400"
        android:gravity="center"
        tools:ignore="MissingPrefix">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1학년" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2학년" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3학년" />

    </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="100"
            app:scale_width="300"
            app:scale_height="150"
            app:scale_top="200"
            android:text="이름"
            app:scale_textsize="80"
            android:gravity="center"
            tools:ignore="MissingPrefix"
            />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        app:scale_left="400"
        app:scale_width="500"
        app:scale_top="200"
        app:scale_height="150"
        app:scale_textsize="80"
        android:gravity="center"
        tools:ignore="MissingPrefix"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_top="600"
        app:scale_left="500"
        app:scale_width="300"
        app:scale_height="400"
        android:gravity="center"
        tools:ignore="MissingPrefix" >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1학년" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2학년" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3학년" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_left="200"
        app:scale_width="300"
        app:scale_height="150"
        app:scale_top="400"
        android:text="중등"
        android:gravity="center"
        app:scale_textsize="80"
        tools:ignore="MissingPrefix"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_left="500"
        app:scale_width="300"
        app:scale_height="150"
        app:scale_top="400"
        android:text="고등"
        app:scale_textsize="80"
        android:gravity="center"
        tools:ignore="MissingPrefix"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_top="1180"
        app:scale_left="200"
        app:scale_width="600"
        app:scale_height="100"
        android:gravity="center"
        tools:ignore="MissingPrefix"
        android:orientation="horizontal"
         >

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="B" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_left="400"
        app:scale_width="200"
        app:scale_height="100"
        app:scale_top="1030"
        android:text="반"
        app:scale_textsize="80"
        android:gravity="center"
        tools:ignore="MissingPrefix"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:scale_left="300"
        app:scale_width="400"
        app:scale_height="150"
        app:scale_top="1300"
        app:scale_textsize="80"
        android:gravity="center"
        tools:ignore="MissingPrefix"
        android:text="가입" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>
