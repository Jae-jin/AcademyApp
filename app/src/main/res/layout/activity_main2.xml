        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="700"
            app:scale_width="470"
            app:scale_height="400"
            app:scale_top="700"
            android:text="고등"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_left="350"
            app:scale_top="1200"
            app:scale_width="550"
            app:scale_height="150"
            android:textAlignment="center"
            android:text="내 기록 보기"/>
