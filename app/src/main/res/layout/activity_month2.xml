<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".month">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="1600"
        app:scale_base_width="1000">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day1    60/3"
            app:scale_height="200"
            app:scale_left="100"
            app:scale_textsize="90"
            app:scale_top="400"
            app:scale_width="800"
            tools:ignore="MissingPrefix" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day2    lock"
            app:scale_height="200"
            app:scale_left="100"
            app:scale_textsize="90"
            app:scale_top="700"
            app:scale_width="800"
            tools:ignore="MissingPrefix" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day3    lock"
            app:scale_height="200"
            app:scale_left="100"
            app:scale_textsize="90"
            app:scale_top="1000"
            app:scale_width="800"
            tools:ignore="MissingPrefix" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day4    lock"
            app:scale_height="200"
            app:scale_left="100"
            app:scale_textsize="90"
            app:scale_top="1300"
            app:scale_width="800"
            tools:ignore="MissingPrefix" />




        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:scale_height="200"
            app:scale_left="80"
            app:scale_top="80"
            app:scale_width="820"
            tools:ignore="MissingPrefix">

        </Spinner>
    </com.ssomai.android.scalablelayout.ScalableLayout>


</LinearLayout>